{
  "compilerOptions": {
    "target": "es2016",                                  
    "module": "commonjs", 
    "moduleResolution": "node", 
    "sourceMap": true,                              
    "rootDir": "./src",                                  
    "outDir": "./build",                                   
    "esModuleInterop": true,                            
    "strict": true,                                      
    "skipLibCheck": true                                 
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./jest.config.ts",
    "./node_modules",
    "./build",
    "./tests"
  ]
}
